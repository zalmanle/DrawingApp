    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.user.drawingapp.views.PainterView
        android:id="@+id/painter"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.FloatingActionButton
